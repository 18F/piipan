{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "resourceTags": {
            "type": "object"
        },
        "servicePlan": {
            "type": "string"
        },
        "OrchApiUri": {
            "type": "string"
        }
    },
    "variables": {
        "appName": "[concat(parameters('appName'), '-', uniqueString(resourceGroup().id))]",
        "sku": "S1",
        "baseSiteConfig": {
            "linuxFxVersion": "DOTNETCORE|3.1",
            "ipSecurityRestrictions": [
                {
                    "ipAddress": "159.142.0.0/16",
                    "action": "Allow",
                    "name": "GSA IP range",
                    "priority": 100
                }
            ],
            "ftpsState": "Disabled",
            "appSettings": [
                // Environment Variables
                {
                    "name": "OrchApiUri",
                    "value": "[parameters('OrchApiUri')]"
                }
            ]
        },
        "systemTypeTag": {
            "SysType": "QueryApp"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-06-01",
            "name": "[parameters('servicePlan')]",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "sku": {
                "name": "[variables('sku')]"
            },
            "kind": "linux",
            "properties": {
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-06-01",
            "name": "[variables('appName')]",
            "location": "[parameters('location')]",
            "tags": "[union(parameters('resourceTags'), variables('systemTypeTag'))]",
            "identity": {
                "type": "SystemAssigned"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlan'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlan'))]",
                "siteConfig": "[variables('baseSiteConfig')]",
                "resources": [
                    {
                        "apiVersion": "2020-06-01",
                        "name": "web",
                        "location": "[parameters('location')]",
                        "dependsOn": [
                            "[resourceId('Microsoft.Web/sites', parameters('appName'))]"
                        ]
                    }
                ]
            }
        }
    ],
    "outputs": {
        "appName": {
            "type": "string",
            "value": "[variables('appName')]"
        }
    }
}
